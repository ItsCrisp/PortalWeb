{% if fields.body.content %}
<div class="row h-100 mt-4 lead" style="background-size: cover;">
  <div class="col-lg-2 align-self-center">
    <img class="img-fluid rounded-circle p-3" src="{{ fields.field_com_fotografia.content }}" title="{{ fields.title.content }}">
  </div>
  <div class="col-lg-8" style="background-size: cover;">
    <p><strong>{{ fields.title.content }}</strong></p>
    {{ fields.body.content }}
  </div>
</div>
{% else %}

  <div class="col-6 col-sm-4 col-lg-3">
    {% if fields.field_com_fotografia.content %}
      <img class="img-fluid rounded-circle p-3" src="{{ fields.field_com_fotografia.content }}" title="{{ fields.title.content }}">
    {% endif %}

    <p class="mb-0">
      {% if fields.field_com_pais.content %}
        <img data-entity-type="file" src="/themes/exhibiz/assets/images/banderas/{{ fields.field_com_pais.content }}.png" title="flag" width="28px">
      {% endif %}
      <strong>{{ fields.title.content }}</strong>
    </p>
    <p>{{ fields.field_com_cargo.content }}</p>
  </div>
{% endif %}
